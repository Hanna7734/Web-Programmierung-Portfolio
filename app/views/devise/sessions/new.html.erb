<body style="background-image: url('https://media.macphun.com/img/uploads/customer/blog/1543597882/15435994595c0175636b7260.24778845.jpg?q=85&w=1680');">

<div class="card">
  <div class="card-header">
    <h2>Einloggen</h2>
  </div>
  <div class="card-body">
    <h5 class="card-title"></h5>
    <p class="card-text"><%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    
    <%= f.email_field :email, class:"form-control", placeholder:"Email", autofocus: true, autocomplete: "email" %>
  </div>
  <br/>

  <div class="field form-group">
    
    <%= f.password_field :password, class:"form-control", placeholder:"Passwort", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-check">
      <%= f.check_box :remember_me%>
      <%= f.label :remember_me %>
    </div>
  <% end %>
<br>
  <div class="actions">
    <%= f.submit "Einloggen", class:"btn btn-success" %>

  </div>
<% end %>
    
  </div>
</div>





<br/>
<%= render "devise/shared/links" %>


</body>